{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "*.d.ts",
    "*.ts",
    "*.js",
    "*.svelte",
    "components/**/*.svelte",
    "components/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}